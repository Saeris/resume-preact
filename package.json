{
  "name": "@saeris/resume-2020",
  "description": "Personal Resume",
  "version": "1.0.0",
  "author": "Drake Costa <drake@saeris.io> (https://github.com/Saeris/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/saeris/resume-2020.git"
  },
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --verbose --template public/index.html",
    "serve": "yarn build && sirv build --port 3000 --cors --single",
    "dev": "preact watch --port 3000 --template public/index.html",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test": "jest ./tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "preact": "^10.3.1",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-icons": "^3.9.0",
    "reakit": "^1.0.0-rc.0",
    "snarkdown": "^1.2.2",
    "styled-components": "^5.0.1",
    "typeface-orbitron": "^1.1.3",
    "typeface-titillium-web": "^0.0.72"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/styled-components": "^5.0.1",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-next.19",
    "preact-cli-plugin-critical-css": "^0.1.0",
    "preact-cli-plugin-styled-components": "^1.0.0",
    "preact-cli-plugin-typescript": "^0.2.2",
    "preact-render-spy": "^1.3.0",
    "prettier": "^1.19.1",
    "sirv-cli": "^1.0.0-next.3",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "typings-for-css-modules-loader": "^1.7.0"
  }
}
